{% extends 'MelodycodeFossdroidBundle::base.html.twig' %}
{% block title %}My Bundles/Subscriptions{% endblock %}

{% block breadcrumb %}
My Bundles/Subscriptions
{% endblock %}

{% block body %}
<div style="width:80%; margin-left:10%; margin-top:5%; margin-bottom:10%;">
<div><h4>Purchased Bundles</h4></div>
<div class="datagrid">
 <table>
        <thead>
          <tr>
              <th>Bundle Name</th>
              <th>Subscription Start</th>
              <th>Subscription End</th>
          </tr>
        </thead>

        <tbody>
        {% for bundle in subs %}
          <tr>
            <td><a href="{{ path('bundle', {'slug': bundle.ID}) }}">{{ bundle.Name }}</a></td>
            <td>{{ bundle.Start }}</td>
            <td>{{ bundle.End }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      </div>
      </div>
  
{% endblock %}
